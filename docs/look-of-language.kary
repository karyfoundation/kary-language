
-- This is very fun right?
space how-old-are-you?
    def in-days as number
	   terminal/input "How old are you?" > years-to-days > return
    end

    def years-to-days years: number as number
        mul 365 years > return
    end
end

object position
    x: number
    y: number
    x-to-y: ( number ) -> number

    def init x: number y: number
        this/x = x
        this/y = y
        this/x-to-y = ( xi ) -> ( mul xi ( div y x ) ) > return
    end
end


how-old-are-you?/in-days